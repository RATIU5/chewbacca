package components

import "github.com/RATIU5/chewbacca/internal/model"
import "fmt"

templ TableResponseShow(badUrls map[string]model.Route) {
	<table>
		<thead>
			<tr>
				<th>Root Path</th>
				<th>Processed Path</th>
				<th>Response</th>
			</tr>
		</thead>
		<tbody>
			for _, url := range badUrls {
				<tr>
					<td><a href={ templ.SafeURL(url.Route) } target="_blank" class="truncate text-ellipsis overflow-hidden">{ url.Route }</a></td>
					<td><a href={ templ.SafeURL(url.URL) } target="_blank">{ url.URLText }</a></td>
					<td>{ fmt.Sprintf("%d", url.Status) }</td>
				</tr>
			}
		</tbody>
	</table>
}
